{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@combobox/*": ["./src/@combobox/*"],
      "@input/*": ["./src/@input/*"],
      "@label/*": ["./src/@label/*"],
      "@icon/*": ["./src/@icon/*"],
      "@hook/*": ["./src/@hook/*"],
      "@button/*": ["./src/@button/*"],
      "@zustand/*": ["./src/@zustand/*"],
      "@utils/*": ["./src/@utils/*"],
      "@icons/*": ["./src/@icons/*"]
    },
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["node_modules", "__test__", "lib"]
}
